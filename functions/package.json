{
  "name": "functions",
  "type": "module",
  "scripts": {
    "build": "esbuild src/sendProduct.ts --bundle --platform=node --target=node18 --outdir=build/ --sourcemap --minify",
    "build:watch": "esbuild src/sendProduct.ts --watch --bundle --platform=node --target=node18 --outdir=build/ --sourcemap --minify",
    "deploy": "cd build && 7z a sendProduct.zip sendProduct.js sendProduct.js.map && aws lambda update-function-code --profile sanjo-solutions --function-name sendProduct --zip-file fileb://sendProduct.zip"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/sendProduct.js",
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "stripe": "^13.7.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.122",
    "@types/node": "^18.18.0",
    "esbuild": "^0.19.3",
    "typescript": "^5.2.2"
  },
  "private": true
}
