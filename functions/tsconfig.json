{
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "module": "NodeNext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "moduleResolution": "nodenext",
    "importsNotUsedAsValues": "error",
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
